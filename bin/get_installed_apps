#!/bin/bash

echo "["

first_run=false

IFS=$'\n'
for app_dir in $(ls -X1 ~/.local/share/applications/*.desktop && ls -X1 /usr/share/applications/*.desktop); do

	app_name=$(cat $app_dir | egrep ^Name= | cut -d = -f2 | tr '"' "'")
	app_icon=$(cat $app_dir | grep Icon | cut -d = -f2 | tr '"' "'")
	app_command=$(cat $app_dir | grep Exec | cut -d = -f2 | tr '"' "'")
	app_onlyshowin=$(cat $app_dir | grep OnlyShowIn | cut -d = -f2 | tr '"' "'")

	if [ "$app_onlyshowin" != "" ]; then
		continue
	fi

	if [ $first_run == false ]; then
		first_run=true
	else
		echo ","
	fi

	echo "{"
		echo \"name\": \"$app_name\",
		echo \"icon\": \"$app_icon\",
		echo \"command\": \"$app_command\"
	echo "}"
done

echo "]"
